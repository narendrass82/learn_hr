<h2>Leave Allocation</h2>
<div class="card" style="width: 1Brem">
    <ul class="list-group">
        @foreach (var item in Model.LeaveAllocation)
        {
        <li class="list-group-item">
            <h6>
                @item.LeaveType.Name <span class="badge badge-secondary">@item.NumberOfDays</span>            |
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                    <i class="fa fa-pencil"></i> Edit
