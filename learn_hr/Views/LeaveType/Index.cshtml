@model IEnumerable<learn_hr.Models.LeaveTypeVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Leave Type</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i>Create New</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultDays)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i class="far fa-edit"></i> Edit </a> 
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i> Details </a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this records?')"> <i class="far fa-trash-alt"></i> Delete </a>
            </td>
        </tr>
}
    </tbody>
</table>
